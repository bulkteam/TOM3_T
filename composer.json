{
    "name": "tom3/vorgangssteuerung",
    "description": "TOM3 - Vorgangs- und Projektsteuerungssystem",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "laudis/neo4j-php-client": "^2.0",
        "monolog/monolog": "^3.0",
        "phpoffice/phpspreadsheet": "^5.3",
        "ramsey/uuid": "^4.0",
        "smalot/pdfparser": "^2.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "TOM\\": "src/TOM/",
            "TOM\\API\\": "src/API/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TOM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "analyse:src": "phpstan analyse src --no-progress",
        "analyse:api": "phpstan analyse public/api --no-progress",
        "analyse:parallel": "phpstan analyse --parallel"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
